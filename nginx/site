limit_req_zone $proxy_add_x_forwarded_for zone=mylimit:10m rate=5r/s;

server {

    server_name jgltechnologies.com;

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/jgltechnologies.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/jgltechnologies.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    location = /shop {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://jgltechnologies.myshopify.com;
    }

    location = /discord {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://discord.gg/TUUbzTa3B7;
    }

    location = /bot/donate {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://www.paypal.com/donate/?business=4RE48WGW7R5YS&no_recurring=0&item_name=The+JGL+Bot+is+a+free+Discord+bot.+We+need+money+to+keep+it+running.+We+would+appreciate+if+you+donated+to+the+bot.&currency_code=USD;
    }

    location = /dpys {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://sites.google.com/view/dpys;
    }

    location = /dpys/src {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://github.com/Nebulizer1213/dpys;
    }

    location = /dpys/pypi {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://pypi.org/project/dpys;
    }

    location = /aiohttplimiter {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://github.com/Nebulizer1213/aiohttp-ratelimiter;
    }

    location = /aiohttplimiter/pypi {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://pypi.org/project/aiohttp-ratelimiter;
    }

    location = /precise-memory-rate-limit {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://www.npmjs.com/package/precise-memory-rate-limit;
    }

    location = /precise-memory-rate-limit/src {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://github.com/Nebulizer1213/precise-memory-rate-limit;
    }

    location = /GinRateLimit {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://github.com/Nebulizer1213/GinRateLimit;
    }

    location = /src {
        limit_req zone=mylimit burst=20 nodelay;
        return 301 https://github.com/Nebulizer1213/jgl-site;
    }

    location / {
        limit_req zone=mylimit burst=20 nodelay;
        proxy_pass http://localhost:81;
        proxy_set_header   Host             $host;
        proxy_set_header   X-Real-IP        $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    }

}

server {

    if ($host = jgltechnologies.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80 default_server;
        listen [::]:80 default_server;

        server_name jgltechnologies.com;

    return 404; # managed by Certbot
}

server{
    listen 80;
    listen [::]:80;
    server_name jglbotapi.us;

    location / {
        proxy_pass http://192.168.1.254:83;
        proxy_set_header   Host             $host;
        proxy_set_header   X-Real-IP        $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    }
}

